<div class="container">
    <h1><?= __('Invitations') ?></h1>
    <? if(data.invites.length == 0){ ?>
        <h3><?= __('No invitations set') ?></h3>
    <? } ?>
    <ul id="invitations">
        <? for(let i = 0; i < data.invites.length; i++){ ?>
            <li data-id="<?= data.invites[i].id ?>">
                <table cellpadding="0" cellspacing="0" class="data_table">
                    <thead>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Benutzername</td>
                            <td class="_select"><?= data.invites[i].user ?></td>
                        </tr>
                        <tr>
                            <td>Einladungstoken</td>
                            <td class="_select"><?= data.invites[i].hash ?></td>
                        </tr>
                        <tr>
                            <td>Eingeladen am: </td>
                            <td class="_select"><?= moment(data.invites[i].invitation_date).format('LLL') ?></td>
                        </tr>
                        <tr>
                            <td>Eingeladene Server</td>
                            <td class="_select"><?= data.invites[i].assigned_server.reduce((acc, curr) => `${acc}, ${curr}`) ?></td>
                        </tr>
                        <tr>
                            <td>
                                <button onclick="removeInvite(<?= data.invites[i].id ?>)"><?= __('Remove') ?></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </li>
        <? } ?>
    </ul>
    <div class="section">
        <button onclick="invitation_form.show()"><?= __('Invite an friend') ?></button>
    </div>
</div>